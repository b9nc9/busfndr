<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list >
            <item
                android:bottom="2dp"
                android:left="-2dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="2dp"
                        android:color="@color/red" />

                    <solid android:color="@android:color/transparent" />

                    <padding android:left="3dp"
                        android:right="3dp"
                        android:top="1dp"
                        android:bottom="10dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list >
            <item
                android:bottom="2dp"
                android:left="-2dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="2dp"
                        android:color="@color/red" />

                    <solid android:color="@android:color/transparent" />

                    <padding android:left="3dp"
                        android:right="3dp"
                        android:top="1dp"
                        android:bottom="10dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item>
        <layer-list >
            <item
                android:bottom="2dp"
                android:left="-2dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="2dp"
                        android:color="#333333" />

                    <solid android:color="@android:color/transparent" />

                    <padding android:left="3dp"
                        android:right="3dp"
                        android:top="1dp"
                        android:bottom="10dp" />
                </shape>
            </item>

        </layer-list>
    </item>

</selector>